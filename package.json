{
  "name": "codeflow-ai",
  "displayName": "CodeFlow AI",
  "description": "AI-powered VS Code extension that tracks coding habits and provides productivity insights.",
  "version": "0.1.4",
  "publisher": "CodeFlowAI",
  "icon": "./icon/2.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/CodeFlow-SUSL/codeflow-ai-susl.git"
  },
  "bugs": {
    "url": "https://github.com/CodeFlow-SUSL/codeflow-ai-susl/issues"
  },
  "homepage": "https://github.com/CodeFlow-SUSL/codeflow-ai-susl#readme",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other",
    "AI",
    "Programming Languages",
    "Visualization"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "train-model": "node ./ml/tfjs/train.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "@tensorflow/tfjs": "^4.22.0",
    "@types/chart.js": "^2.9.41",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "chart.js": "^4.4.1",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "codeflow.showReport",
        "title": "CodeFlow: Show Weekly Report",
        "icon": "$(chart-line)"
      },
      {
        "command": "codeflow.trainTFModel",
        "title": "CodeFlow: Train TensorFlow.js Model",
        "icon": "$(beaker)"
      },
      {
        "command": "codeflow.testGeminiConnection",
        "title": "CodeFlow: Test Gemini AI Connection",
        "icon": "$(plug)"
      },
      {
        "command": "codeflow.resetExtension",
        "title": "CodeFlow: Reset Extension to Fresh State",
        "icon": "$(trash)"
      }
    ],
    "configuration": {
      "title": "CodeFlow AI",
      "properties": {
        "codeflow.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable CodeFlow tracking"
        },
        "codeflow.cloudSync": {
          "type": "boolean",
          "default": false,
          "description": "Enable cloud sync for team insights"
        },
        "codeflow.useExternalAPI": {
          "type": "boolean",
          "default": false,
          "description": "Use external API for AI analysis"
        },
        "codeflow.apiEndpoint": {
          "type": "string",
          "default": "",
          "description": "API endpoint for external AI analysis"
        },
        "codeflow.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for external AI analysis"
        },
        "codeflow.useGeminiAI": {
          "type": "boolean",
          "default": false,
          "description": "Enable Google Gemini AI for advanced code insights"
        },
        "codeflow.geminiApiKey": {
          "type": "string",
          "default": "",
          "description": "Google Gemini API key for AI-powered insights"
        },
        "codeflow.useTFModel": {
          "type": "boolean",
          "default": false,
          "description": "Use TensorFlow.js model for productivity analysis"
        },
        "codeflow.goals": {
          "type": "object",
          "default": {},
          "description": "User-defined productivity goals"
        },
        "codeflow.theme": {
          "type": "string",
          "enum": [
            "light",
            "dark",
            "auto"
          ],
          "default": "auto",
          "description": "Theme preference for CodeFlow reports"
        }
      }
    },
    "menus": {
      "commandPalette": [
        {
          "command": "codeflow.showReport",
          "when": "true"
        },
        {
          "command": "codeflow.trainTFModel",
          "when": "true"
        },
        {
          "command": "codeflow.testGeminiConnection",
          "when": "true"
        },
        {
          "command": "codeflow.resetExtension",
          "when": "true"
        }
      ]
    }
  }
}

{
  "name": "codeflow-ai",
  "displayName": "CodeFlow AI",
  "description": "AI-powered VS Code extension that tracks coding habits and provides productivity insights.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other",
    "AI",
    "Programming Languages",
    "Visualization"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codeflow-ai.helloWorld",
        "title": "Type here"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  },
   "contributes": {
    "commands": [
      {
        "command": "codeflow.showReport",
        "title": "CodeFlow: Show Weekly Report"
      },
      {
        "command": "codeflow.toggleTracking",
        "title": "CodeFlow: Toggle Tracking"
      },
      {
        "command": "codeflow.showBadges",
        "title": "CodeFlow: Show Earned Badges"
      },
      {
        "command": "codeflow.enableCloudSync",
        "title": "CodeFlow: Enable Cloud Sync"
      },
      {
        "command": "codeflow.configureAPI",
        "title": "CodeFlow: Configure AI API"
      }
    ],
     "configuration": {
      "title": "CodeFlow AI",
      "properties": {
        "codeflow.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable CodeFlow tracking"
        },
        "codeflow.cloudSync": {
          "type": "boolean",
          "default": false,
          "description": "Enable cloud sync for team insights"
        },
        "codeflow.useExternalAPI": {
          "type": "boolean",
          "default": false,
          "description": "Use external API for AI analysis"
        },
        "codeflow.apiEndpoint": {
          "type": "string",
          "default": "",
          "description": "API endpoint for external AI analysis"
        },
        "codeflow.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for external AI analysis"
        }
      }
    },
     "menus": {
      "commandPalette": [
        {
          "command": "codeflow.showReport",
          "when": "true"
        },
        {
          "command": "codeflow.toggleTracking",
          "when": "true"
        },
        {
          "command": "codeflow.showBadges",
          "when": "true"
        },
        {
          "command": "codeflow.enableCloudSync",
          "when": "true"
        },
        {
          "command": "codeflow.configureAPI",
          "when": "true"
        }
      ]
    }
  }
}
